---
import { getCollection } from 'astro:content';
import type { GrantFilterKey } from '~/hooks/useGrantsFilter';
import Content from './Content';

// Get the blog content collection, BlogOutput will handle rendering via React
const posts = await getCollection('blog');

// Define filters, only a maximum of 4 will render
export const filters: Array<GrantFilterKey> = ['month', 'year', 'tags'];
---

<Content filters={filters} posts={posts} client:load />
