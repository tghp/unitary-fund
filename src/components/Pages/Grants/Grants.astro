---
import { getCollection } from 'astro:content';
import type { FilterSpec } from '~/hooks/useFilter';
import Content from './Content';

// Get the grants content collection, GrantsOutput will handle rendering via React
const grants = await getCollection('grant');

// Define filters, only a maximum of 4 will render
export const filters: Array<FilterSpec['grant']['keys']> = ['year', 'month', 'country'];
---

<Content filters={filters} items={grants} client:only />
