---
import ReducedWidth from '~/components/Ui/ReducedWidth.astro';

export interface Props {
  onlyTitle?: boolean;
  spacingBelow: 'small' | 'large' | false;
}

const { onlyTitle = false, spacingBelow = false } = Astro.props;
---

<ReducedWidth
  className={[
    'pt-8 text-2xl paragraph:my-4 [&_>_:last-child]:mb-0',
    'page-title:text-4xl page-title:mb-6',
    'only-strong:text-3xl has-only-strong:text-2xl',
    'md:pt-44 md:page-title:text-5xl md:no-only-strong:text-2xl',
    spacingBelow === 'small' && 'pb-10',
    spacingBelow === 'large' && 'pb-24',
  ]}>
  {!onlyTitle && <slot />}
  {
    onlyTitle && (
      <h1>
        <slot />
      </h1>
    )
  }
</ReducedWidth>
