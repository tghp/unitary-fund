---
import Svg from '~/components/Util/Svg.astro';

export interface Props {
  text: string;
  url: string;
  className?: string;
}

const { text, url, className } = Astro.props;
---

<a
  class:list={[
    'uppercase grid-in-button relative font-mono font-bold self-center text-lg md:text-xl flex max-w-fit',
    '[&>*]:hover:bg-yellow-400',
    className,
  ]}
  title={text}
  href={url}
>
  <span class="border-solid border-b-4 border-b-yellow-400 mr-2 px-1 flex items-center text-2xl svg-path-child:fill-black">
    <Svg name="arrow" />
  </span>
  <span class="border-solid border-b-4 border-b-yellow-400 px-1">{text}</span>
</a>
