---
import type { AstroBuiltinAttributes } from 'astro';
export interface Props {
  className?: AstroBuiltinAttributes['class:list'];
  smaller?: boolean;
  center?: boolean;
}

const { className, smaller = false, center = false } = Astro.props;
---

<div
  class:list={[
    !smaller && 'max-w-4xl',
    smaller && 'max-w-2xl',
    center && 'mx-auto',
    className,
  ]}
>
  <slot />
</div>
